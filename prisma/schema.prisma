generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Warranty {
  id                 String   @id @default(uuid())
  invoiceNumber      Int?
  clientName         String
  rut                String?
  contact            String?
  email              String?
  product            String
  failureDescription String?
  sku                String?
  location           String   @default("Ingreso")
  entryDate          DateTime @default(now())
  deliveryDate       DateTime?
  readyDate          DateTime?
  status             String   @default("pending") // pending, ready, completed
  repairCost         Int?     @default(0)
  notes              String?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}
